{
  "name": "emdemo",
  "version": "0.1.0",
  "private": true,
  "author": "jonnyps",
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "chai": "^4.2.0",
    "electron-chromedriver": "^2.0.0",
    "mocha": "^6.2.0",
    "selenium-webdriver": "^4.0.0-alpha.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "node_modules/.bin/mocha  testCase/ ",
    "eject": "react-scripts eject",
    "electron-start": "electron .",
    "electron-dev": "concurrently \"BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.xxx.app",
    "npmRebuild": true,
    "mac": {
      "category": "news",
      "icon": "build/icon.png"
    },
    "win": {
      "icon": "build/icon.png",
      "target": "nsis"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "allowElevation": false,
      "createDesktopShortcut": true,
      "menuCategory": true,
      "oneClick": false
    },
    "files": [
      "build/**/*"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "electron": "^5.0.8",
    "electron-builder": "^21.1.5",
    "wait-on": "^3.3.0"
  }
}
